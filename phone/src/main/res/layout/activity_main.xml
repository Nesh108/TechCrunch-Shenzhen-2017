<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.segway.robot.mobilesample.MainActivity">


    <Button
        android:id="@+id/stop_btn"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_above="@+id/back_btn"
        android:layout_alignEnd="@+id/fwd_btn"
        android:layout_marginBottom="71dp" />

    <Button
        android:id="@+id/rr_btn"
        android:layout_height="wrap_content"
        android:text="right"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_alignBaseline="@+id/stop_btn"
        android:layout_alignBottom="@+id/stop_btn"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/rl_btn"
        android:layout_height="wrap_content"
        android:text="left"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_alignBaseline="@+id/stop_btn"
        android:layout_alignBottom="@+id/stop_btn"
        android:layout_toEndOf="@+id/back_btn" />

    <Button
        android:id="@+id/fwd_btn"
        android:layout_height="wrap_content"
        android:text="up"
        android:textStyle="normal|bold"
        android:layout_width="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/stop_btn"
        android:layout_toEndOf="@+id/rr_btn" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="down"
        android:layout_marginBottom="275dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/fwd_btn" />

    <ImageView
        android:src="@android:drawable/alert_dark_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageView"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true" />


</RelativeLayout>
